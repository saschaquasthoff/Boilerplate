{
    // enforcing options
    "camelcase":    true,   // force variable names to use camelCase style
    "curly":        true,   // force the use of curly braces around code blocks
    "eqeqeq":       true,   // prohibit the use of == and != in favor of === and !==
    "forin":        true,   // require ´for in´ loops to filter the object items
    "immed":        true,   // wrap immediate function invocations in parantheses
    "indent":       4,      // enforce a specific tab width for indentation
    "latedef":      true,   // prohibit the use of a variable before it was defined
    // "maxlen":       80,     // set the maximum length of a line
    "newcap":       true,   // capitalize names of constructor functions
    "noempty":      false,  // warn for empty code blocks
    "nonew":        true,   // don‘t use constructor functions without assigning the result
    "plusplus":     false,  // don‘t use unary increment and decrement operators
    "quotmark":     false,  // enforces consistency of quotation marks
    "strict":       false,  // enforce the us of ES5‘s strict mode
    "trailing":     true,   // warn on trailing whitespace
    "undef":        true,   // warn on use of undefined variables
    "unused":       true,   // warn when a variable is defined but never used

    // relaxing options
    "asi":          false,  // suppress warnings about missing semicolons
    "debug":        false,  // suppress warnings about debugger statements
    "es5":          false,  // tell JSHint that you use ES5 specific features
    "esnext":       false,  // tell JSHint that you use ES.next specific features
    "evil":         false,  // suppress warnings about the use of ´eval´

    // environments (pre-define globals used in this environments)
    "browser":      true,   // browser globals (document, window, etc.)
    "devel":        true,   // globals used for debugging (console, alert, etc.)
    "jquery":       true,   // globals exposed by jQuery
